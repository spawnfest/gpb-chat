{erl_opts, [{i, "./_build/default/plugins/gpb/include/"}]}.

{deps, [
  {gpb, "4.10.2"},
  {cowboy, "2.6.3"},
  {fusco, {git, "https://github.com/esl/fusco.git", {branch, "master"}}}
]}.

{shell, [
    {apps, [gpb_chat]}
]}.

{src_dirs, ["src", "hrl", "src/proto"]}.

{plugins, [{rebar3_gpb_plugin, "2.10.0"}]}.

{gpb_opts,
  [
    {i, "proto"},
	  {o_erl, "src/proto"},
	  {o_hrl, "src/proto"}]}.

{provider_hooks, [
    {pre, [{compile, {protobuf, compile}}]}
]}.
